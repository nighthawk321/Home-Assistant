    domain: light
    entity_id: light.0x001788010244e3bd_light
    type: turn_on
- id: '1582809324125'
  alias: Close the Curtain
  description: Closes the curtain at sunset
  trigger:
  - event: sunset
    platform: sun
  condition: []
  action:
  - data:
      brightness: 2
    entity_id: light.curtain
    service: light.toggle
- id: '1583268889911'
  alias: Turn Off Ceiling Light
  description: Turns the light off after a preset time
  trigger:
  - device_id: cb6dd309898847668823966b48c1938b
    domain: light
    entity_id: light.0x001788010244e3bd_light
    for:
      hours: 0
      minutes: 30
      seconds: 0
    platform: device
    type: turned_on
  condition: []
  action:
  - device_id: cb6dd309898847668823966b48c1938b
    domain: light
    entity_id: light.0x001788010244e3bd_light
    type: turn_off
